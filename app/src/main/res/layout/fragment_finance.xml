<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_height="140dp"
        android:layout_width="match_parent"
        android:id="@+id/linearLayout1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <!-- A CardView that contains a TextView -->
        <android.support.v7.widget.CardView

            android:id="@+id/card_view1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"

                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:text="+8.90"
                    android:textColor="#7bc965"
                    android:layout_alignBaseline="@+id/textView9"
                    android:layout_alignBottom="@+id/textView9"
                    android:layout_alignEnd="@+id/textView8" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView18"
                    android:layout_below="@+id/view2"
                    android:text="-40.00"
                    android:textColor="@color/colorAccent"
                    android:layout_alignStart="@+id/textView13" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="-40.00"
                    android:textColor="#de1196"
                    android:layout_alignParentTop="true"
                    android:layout_alignEnd="@+id/textView14" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView10"
                    android:layout_centerVertical="true"
                    android:text="Cheque Deposit" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ATM Withdrawal"
                    android:layout_below="@+id/view2"
                    android:layout_alignStart="@+id/textView10" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="7dp"
                    android:text="Bank Withrawal" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ghs"
                    android:textSize="12sp"
                    android:layout_below="@+id/textView7"
                    android:layout_alignStart="@+id/textView14" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ghs"
                    android:textSize="12sp"
                    android:layout_below="@+id/textView15"
                    android:layout_alignStart="@+id/textView8" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ghs"
                    android:textSize="12sp"
                    android:layout_below="@+id/textView13"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="19dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3RD May 2017"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/textView16" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView12"
                    android:layout_below="@+id/textView9"
                    android:text="3RD May 2017"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3RD May 2017"
                    android:textSize="12sp"
                    android:layout_below="@+id/textView11"
                    android:layout_alignStart="@+id/textView11" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/textView8"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray"
                    android:id="@+id/view2" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/textView12"
                    android:background="@android:color/darker_gray" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_height="130dp"
        android:layout_width="match_parent"
        android:id="@+id/linearLayout3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="170dp">
        <!-- A CardView that contains a TextView -->
        <android.support.v7.widget.CardView

            android:id="@+id/card_view3"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView6"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    card_view:srcCompat="@drawable/ipad" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="14dp"
                    android:layout_toEndOf="@+id/imageView"
                    android:text="Ipad Air"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView19"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="11dp"
                    android:layout_marginEnd="16dp"
                    android:text="Confirm delivery details"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView19"
                    android:layout_toEndOf="@+id/imageView"
                    android:text="GHS 1200" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView5"
                    android:layout_below="@+id/textView5"
                    android:textColor="#47cf50"
                    android:text="Purchase Approved" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/textView6"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</RelativeLayout>
